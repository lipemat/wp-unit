+
+	/**
+	 * Theme data.
+	 *
+	 * @var array
+	 */
+	private $user_theme_data = array(
+		'isGlobalStylesUserThemeJSON' => 1,
+		'version'                     => 1,
+		'styles'                      => array(
+			'blocks' => array(
+				'core/button' => array(
